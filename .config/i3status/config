general {
    interval	= 1
    colors	= true
    color_good 	    = '#00d000'
    color_degraded  = '#cdcd55'
    color_bad       = '#e83333'
}

order += "volume master"
order += "wireless wlp3s0"
order += "ethernet enp0s25"
order += "ethernet tun0"
order += "battery 0"
order += "battery 1"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "time"

wireless wlp3s0 {
	format_up = "wlan:%quality %ip"
	format_down = "wlan: down"
}

ethernet tun0{
	format_up= "vpn: %ip"
	format_down = "vpn: down"
}

ethernet enp0s25 {
	format_up = "eth: %ip %speed"
	format_down = "eth: down"
}

time {
    format = "%A %d %B %H:%M:%S"
}

volume master {
    format = "Vol: %volume"
    format_muted = "Mute: %volume"
    device = "pulse:0"
    mixer = "Master"
    mixer_idx = 0
}

battery 0 {
    format = "B1%status%percentage %remaining"
    format_down = ""
    separator = false
    separator_block_width = 10
    last_full_capacity = true
    integer_battery_capacity = false
    low_threshold = 30
    threshold_type = percentage
    hide_seconds = true
    status_chr = "⚡"
    status_bat = "*"
    status_unk = " "
    status_full = " "
}

battery 1 {
    format = "B2%status%percentage %remaining"
    format_down = ""
    last_full_capacity = true
    integer_battery_capacity = false
    low_threshold = 30
    threshold_type = percentage
    hide_seconds = true
    status_chr = "⚡"
    status_bat = "*"
    status_unk = " "
    status_full = " "
}

cpu_usage {
    format = "CPU: %cpu0 %cpu1 %cpu2 %cpu3"
    max_threshold = 75
    degraded_threshold = 10 
}

cpu_temperature 0 {
    format = "Temp: %degrees°C"
    path = "/sys/class/thermal/thermal_zone0/temp"
    max_threshold = 50
    separator = false
    separator_block_width = 8
}

cpu_temperature 1 {
	format = "%degrees°C"
	path = "/sys/class/thermal/thermal_zone1/temp"
	max_threshold = 50
}
